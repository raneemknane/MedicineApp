<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginTop="102dp"
            android:text="Reset"
            app:layout_constraintStart_toStartOf="@+id/etEmailForgotPassword"
            app:layout_constraintTop_toBottomOf="@+id/etEmailForgotPassword" />

        <EditText
            android:id="@+id/etEmailForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="171dp"
            android:ems="10"
            android:hint="enter username..."
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLoginFromForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="go to Log in..."
            app:layout_constraintEnd_toEndOf="@+id/btnReset"
            app:layout_constraintTop_toBottomOf="@+id/btnReset" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>